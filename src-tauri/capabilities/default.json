{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ollama-serve",
          "cmd": "ollama",
          "args": [
            "serve"
          ]
        },
        {
          "name": "ollama-stop",
          "cmd": "ollama",
          "args": [
            "stop",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    }
  ]
}